
# Includes
SET(TRIQS_INCLUDE @CMAKE_INSTALL_PREFIX@/include)
SET(EXTRA_INCLUDE @ALPS_INCLUDE_DIRS@ @ALPS_EXTRA_INCLUDE_DIRS@ @BOOST_INCLUDE_DIR@)
SET(CBLAS_INCLUDE @CBLAS_INCLUDE_DIR@)
SET(FFTW_INCLUDE @FFTW_INCLUDE_DIR@)

# Libraries
SET(TRIQS_LIBRARY -L@CMAKE_INSTALL_PREFIX@/lib -ltriqs -ltriqs_utility)
SET(EXTRA_LIBRARY @ALPS_EXTRA_LIBRARIES@ @PYTHON_LIBRARY@ @PYTHON_EXTRA_LIBS@ @BOOST_LIBRARY@)
SET(LAPACK_LIBRARY @LAPACK_LIBS@)
SET(FFTW_LIBRARY @FFTW_LIBRARIES@)

# Fix the rpath
SET(CMAKE_INSTALL_RPATH "@CMAKE_INSTALL_PREFIX@/lib")
SET(CMAKE_INSTALL_RPATH_USE_LINK_PATH TRUE)
SET(CMAKE_BUILD_WITH_INSTALL_RPATH TRUE)

# Check compiler
MESSAGE( " compiler is ${CMAKE_CXX_COMPILER}")
if (NOT CMAKE_CXX_COMPILER STREQUAL "@CMAKE_CXX_COMPILER@" )
 MESSAGE(FATAL_ERROR "You should use the same compiler as the one used to compile TRIQS")
endif()


